.widget
  %canvas{:id => "g3q-chart", "data-percentage" => "#{profile.recommended_percentage}"}
  #g3q-circle{:class => "canvas-circle"} #{profile.recommended_percentage}%
  .meta-name recommend
  .company-name #{profile.business_name}
  %br
  - if profile.reviews.present?
    = image_tag "#{profile.average_score.to_s}-stars.png"
  
    .widget-footer
      = link_to "Read #{profile.reviews.count} Reviews", profile_path(profile), target: "_blank"
  - else
    %p.text-error
    This business has not been reviewed yet. Be the first to #{link_to "write a review", new_profile_review_url(profile)}.
=javascript_include_tag "widget.js"

