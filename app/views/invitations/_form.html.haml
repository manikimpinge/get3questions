= simple_form_for(invitation, html: {class: "form-horizontal" }, html: {class: "well" } ) do |f|
  %fieldset
    = f.input :first_name, as: :string
    = f.input :last_name, as: :string
    = f.input :medium, collection: options_for_invitation_medium, include_blank: false, label: false
    = f.input :email, as: :string
    = f.input :phone, as: :string, placeholder: '1234567890',input_html: {class: "bfh-phone", "data-format" => "ddd-ddd-dddd", "data-number" => invitation.phone}
    = f.hidden_field :profile_id, :value => current_user.profile.id
  .form-actions
    = f.submit "Send", class: "btn btn-primary"
